<%=
  content_tag("turbo-frame", id: "project-attributes-sidebar") do
    component_wrapper do
      flex_layout do |sections_container|
        ProjectCustomFieldSection.all.order(created_at: :asc).each do |project_custom_field_section|
          sections_container.with_row(mb: 3) do
            render(ProjectAttributes::Section::ShowComponent.new(
              project: @project,
              project_custom_field_section: project_custom_field_section
            ))
          end
        end
      end
    end
  end
%>
