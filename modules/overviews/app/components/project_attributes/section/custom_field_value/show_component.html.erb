<%=
  flex_layout(align_items: :flex_start, justify_content: :space_between) do |custom_field_value_container|
    # temporarily using inline styles in order to align the content as desired
    custom_field_value_container.with_column(mr: 2, style: "width: 130px;") do
      render(Primer::Beta::Text.new(font_weight: :bold)) { @custom_field_value.custom_field.name }
    end

    custom_field_value_container.with_column(flex: 1) do
      render(Primer::Beta::Text.new()) { formated_value }
    end
  end
%>
