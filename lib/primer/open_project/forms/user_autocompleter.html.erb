<%= render(FormControl.new(input: @input)) do %>
    <%= angular_component_tag 'opce-user-autocompleter',
                              data: @data_attributes,
                              inputs: @autocomplete_options.merge(
                                classes: "ng-select--primerized #{@input.invalid? ? '-error' : ''}",
                                inputName: @autocomplete_options.fetch(:inputName) { builder.field_name(@input.name, multiple: @autocomplete_options[:multiple]) },
                                inputValue: @autocomplete_options.fetch(:inputValue) { builder.object.send(@input.name) },
                              )
    %>
<% end %>
